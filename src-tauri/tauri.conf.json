{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "PolicyPilot",
  "version": "0.1.0",
  "identifier": "com.policypilot.app",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "frontendDist": ".."
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "PolicyPilot | Altech Insurance",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
